<Window x:Class="AirNautis.Activate_Airplane"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Activate Airplane" Height="166.143" Width="365" WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize" Icon="paper_airplane_icon.ico">
    <Grid>
        <Label Content="Airplane" HorizontalAlignment="Left" Margin="27,24,0,0" VerticalAlignment="Top" Width="77"/>
        <ComboBox Name="comboAirplane" HorizontalAlignment="Left" Margin="104,28,0,0" VerticalAlignment="Top" Width="227"
                  ItemsSource="{Binding Path=.}"
                  DisplayMemberPath="Model"
                  SelectedValuePath="Id"/>

        <Button Name="btnActivate" Content="Activate Airplane" HorizontalAlignment="Left" Margin="27,80,0,0" VerticalAlignment="Top" Width="304" Click="btnActivate_Click"/>

    </Grid>
</Window>
